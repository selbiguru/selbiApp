<Alloy>
	<View id="verifyAddressView">
        <View id="verifyAddressTopBar">
        	<View id="cancelAddress" class="validateButtons">  
		    	<Button icon="fa-times" class="verifyAddressButtonIcon" id="verifyAddressCancelButton">Cancel</Button>
		    </View>
		    <View id="titleVerifyAddressView">
				<Label id="titleVerifyAddressLabel">Validate Address</Label>
			</View>
			<View id="validateAddress" class="validateButtons" > 
		    	<Button icon="fa-check" onClick="validateAddressView" class="verifyAddressButtonIcon" id="verifyAddressVerifyButton">Verify</Button>
		    </View> 
		    <Widget id="fa" src="com.mattmcfarland.fontawesome"/>
		</View>
		<View id='addressValidationView'>
			<View id="userAddress" class="rowContainer">
				<View class="info-views">
					<Label class='address-labels'>Street:</Label>
		        	<TextField id="route" editable="false" class="user-profile-text-fields left-padding"></TextField>
		        </View>
		        <View class="login-underline"/>
		    </View>
		    <View id="userAptNumber" class="rowContainer">
		    	<View id='aptNumberView' class="info-views">
		    		<Label class='address-labels'>Apt/Bldg #:</Label>
		        	<TextField id="apartmenNumber" class="user-profile-text-fields left-padding"></TextField>
		        </View>
		        <View class="login-underline"/>
		    </View>
		    <View id="city" class="rowContainer">
		    	<View class="info-views">
		    		<Label class='address-labels'>City:</Label>
		        	<TextField id="locality" editable="false" class="user-profile-text-fields left-padding"></TextField>
		        </View>
		        <View class="login-underline"/>
		    </View>
		    <View id="state" class="rowContainer">
		    	<View class="info-views">
		    		<Label class='address-labels'>State:</Label>
		        	<TextField id="administrative_area_level_1" editable="false" class="user-profile-text-fields left-padding"></TextField>
		        </View>
		        <View class="login-underline"/>
		    </View>
		    <View id="zipCode" class="rowContainer">
		    	<View class="info-views">
		    		<Label class='address-labels'>Zip Code:</Label>
		        	<TextField id="postal_code" editable="false" maxLength="10" class="user-profile-text-fields left-padding"></TextField>
		        </View>
		        <View class="login-underline"/>
		    </View>
		    <View id="userCountry" class="rowContainer">
		    	<View class="info-views">
		    		<Label class='address-labels'>Country:</Label>
		        	<TextField id="country" editable="false" maxLength="13" class="user-profile-text-fields left-padding"></TextField>
		        </View>
		        <View class="login-underline"/>
		    </View>
		</View>
    </View>
</Alloy>