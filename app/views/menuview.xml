<Alloy>
	<Model src="user"></Model>
	<View id="menuView">
		<View id="menuTopBar"> 
			<Label id="menuTitle">Selbi</Label>
		</View>
		<View class="menu-underline"/>
		<TableView class="menuTable" id="menuTable">
			<TableViewRow class="" id="row0" borderColor='red'>
				<ImageView id="menuUserImage" image="{user.imageURL}" />
       			<View id="menuUserName">
					<Label id="userName" class="" text="{user.firstName} {user.lastName}"></Label>
				</View>
			</TableViewRow>			
			<TableViewRow>
				<View class="menu-underline bottomPadding"></View>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row1">
				<View class="rowContainer">
					<Label icon="fa-camera" class="rowLabel row-icon" id="menuCameraIcon"></Label>
					<Label id="rowLabel" class="rowLabel">Post a Listing</Label>
				</View>
				<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row2">
				<View class="rowContainer">
					<Label icon="fa-bell" class="rowLabel row-icon" id="menuNotificationIcon"></Label>
					<Label id="notificationsLabel" class="rowLabel">Notifications</Label>
					<Label id="notificationsCounter" text="{user.notificationCount}"></Label>
				</View>
				<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row3">
				<View class="rowContainer">
					<Label icon="fa-users" class="rowLabel row-icon" id="menuFriendsListingIcon"></Label>
					<Label id="friendsListingLabel" class="rowLabel">Friends Listings</Label>
				</View>
				<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row4">
				<View class="rowContainer">
					<Label icon="fa-globe" class="rowLabel row-icon" id="menuSelbiListingIcon"></Label>
					<Label id="selbiListingLabel" class="rowLabel">Selbi USA</Label>
				</View>
				<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row5">
				<View class="rowContainer">
					<Label icon="fa-user" class="rowLabel row-icon" id="menuMyListingIcon"></Label>
					<Label id="myListingLabel" class="rowLabel">My Listings</Label>
				</View>
				<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row6">
				<View class="rowContainer">
					<Label icon="fa-book" class="rowLabel row-icon" id="menuContactIcon"></Label>
					<Label id="contactsLabel" class="rowLabel">Contacts</Label>
				</View>
				<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
			</TableViewRow>
		</TableView>
		<View id="menuSeparator" class="menu-underline"></View>
		<TableView class="menuTable2" id="menuTable2">
			<TableViewRow class="tableRow" id="row7">
				<View class="rowContainer">
					<Label icon="fa-gears" class="rowLabel row-icon" id="menuSettingsIcon"></Label>
					<Label id="settingsLabel" class="rowLabel">Settings</Label>
				</View>
				<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row8">
				<View class="rowContainer" onClick="logout">
					<Label icon="fa-sign-out" class="rowLabel row-icon" id="menuSignOutIcon"></Label>
					<Label id="signOutLabel" class="rowLabel">Sign-out</Label>
				</View>
				<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
			</TableViewRow>
		</TableView>
	</View>
	
</Alloy>
