<Alloy>
	<Window backgroundColor="#62D7F5" class="wrapper">		
		<View id="registerView" class="wrapper-container">
			<Label class="splash-header-text">Sign Up</Label>
			<View id="nameView">
				<View id="firstNameView">
					<TextField id="firstName" class="format-first-name" hintText="First Name" maxLength="50">
						<KeyboardToolbar>
			                <Toolbar id="firstNameToolbar">
			                    <Items>
			                    	<Button id="firstNameFlexSpace" systemButton="Ti.UI.iPhone.SystemButton.FLEXIBLE_SPACE" />
			                        <Button onClick='blurTextField' id="firstNameButton" title='Done' systemButton="Ti.UI.iPhone.SystemButton.DONE" />
			                    </Items>
			                </Toolbar>
			            </KeyboardToolbar>
					</TextField>
					<View id="firstNameUnderline" class="signup-underline format-first-name"/>
				</View>
				<View id="lastNameView">
					<TextField id="lastName" class="format-last-name" hintText="Last Name" maxLength="50">
						<KeyboardToolbar>
			                <Toolbar id="lastNameToolbar">
			                    <Items>
			                    	<Button id="lastNameFlexSpace" systemButton="Ti.UI.iPhone.SystemButton.FLEXIBLE_SPACE" />
			                        <Button onClick='blurTextField' id="lastNameButton" title='Done' systemButton="Ti.UI.iPhone.SystemButton.DONE" />
			                    </Items>
			                </Toolbar>
			            </KeyboardToolbar>
					</TextField>
					<View id="lastNameUnderline" class="signup-underline format-last-name"/>
				</View>
			</View>
			<TextField id="email" hintText="Email" maxLength="254">
				<KeyboardToolbar>
	                <Toolbar id="emailNameToolbar">
	                    <Items>
	                    	<Button id="emailNameFlexSpace" systemButton="Ti.UI.iPhone.SystemButton.FLEXIBLE_SPACE" />
	                        <Button onClick='blurTextField' id="emailNameButton" title='Done' systemButton="Ti.UI.iPhone.SystemButton.DONE" />
	                    </Items>
	                </Toolbar>
	            </KeyboardToolbar>
			</TextField>
			<View class="signup-underline"/>
			<TextField passwordMask="true" hintText="Password" id="password" maxLength="254">
				<KeyboardToolbar>
	                <Toolbar id="passwordToolbar">
	                    <Items>
	                    	<Button id="passwordFlexSpace" systemButton="Ti.UI.iPhone.SystemButton.FLEXIBLE_SPACE" />
	                        <Button onClick='blurTextField' id="passwordButton" title='Done' systemButton="Ti.UI.iPhone.SystemButton.DONE" />
	                    </Items>
	                </Toolbar>
	            </KeyboardToolbar>
			</TextField>
			<View class="signup-underline"/>
			<TextField hintText="555-555-5555" id="phoneNumber" maxLength="12">
				<KeyboardToolbar>
	                <Toolbar id="phoneNumberToolbar">
	                    <Items>
	                    	<Button id="phoneNumberFlexSpace" systemButton="Ti.UI.iPhone.SystemButton.FLEXIBLE_SPACE" />
	                        <Button onClick='blurTextField' id="phoneNumberButton" title='Done' systemButton="Ti.UI.iPhone.SystemButton.DONE" />
	                    </Items>
	                </Toolbar>
	            </KeyboardToolbar>
			</TextField>
			<View class="signup-underline"/>		
			<Button id='registerButton' onClick="registerUser" class="primary-btn">Let's Selbi</Button>
			<Label id="terms" class='terms-conditions'></Label>
			<Label id='closeRegister' onClick="closeRegisterWindow" class="cancel-txt">Already Selbi?</Label>
		</View>
	</Window>
</Alloy>