<Alloy>
	<Window backgroundColor="#62D7F5" class="wrapper">		
		<View class="wrapper-container" layout="vertical" top="7%">
			<Label class="splash-header-text">Sign Up</Label>
			<TextField id="firstName" hintText="FirstName"></TextField>
			<View class="signup-underline"/>
			<TextField id="lastName" hintText="LastName"></TextField>
			<View class="signup-underline"/>
			<TextField id="email" hintText="Email"></TextField>
			<View class="signup-underline"/>
			<TextField passwordMask="true" hintText="Password" id="password"></TextField>
			<View class="signup-underline"/>	
			<Button onClick="registerUser" class="primary-btn">Let's Selbi</Button>
			<Label class="terms-conditions">By signing up, you are agreeing to Selbi's User Agreement and Privacy Policy</Label>
			<Label onClick="closeRegisterWindow" class="cancel-txt">Already Selbi?</Label>
		</View>
	</Window>
</Alloy>