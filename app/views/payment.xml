<Alloy>
	<View id="paymentView">
		<View id="paymentTopBar">
			<View id="menuButton">
				<Label icon="fa-arrow-left" id="paymentButtonIcon"></Label>			
			</View>
			<View id="titlePaymentView">
				<Label id="titlePaymentLabel">Payment</Label>
			</View>
		</View>
		<View id="paymentDetails" class="payment-types">
			<Label id="paymentViewLabel" class="payment-label">Add/Edit Payment Method</Label>
			<View id="viewAddCard" class="rowContainer">
			 	<Label icon="fa-plus-square-o" id="labelAddCard" class="rowLabel" onClick="addNewCard">Add Payment Method</Label>
			</View>
			
		</View>
		<View id="bankingDetails" class="payment-types">
			<Label id="bankingViewLabel" class="payment-label">Add a Bank or use your Venmo</Label>
			<View id="viewAddBank" class="rowContainer">
			 	<Label icon="fa-plus-square-o" id="labelAddBank" class="rowLabel" onClick="addNewBank">Add Bank Account</Label>
			</View>
		</View>
		<Label id="separatorLabel" class="topPadding">OR</Label>
		<View id="viewAddVenmo" class="rowContainer topPadding">
			 <ImageView id="imageAddVenmo" class="rowLabel" onClick="addVenmo"/>
		</View>
		<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
	</View>
</Alloy>