<Alloy>
	<View id="paymentView">
		<View id="paymentTopBar">
			<View id="backViewButton">
				<Button icon="fa-chevron-left" id="paymentButtonIcon" onClick="backButton"></Button>		
			</View>
			<View id="titlePaymentView">
				<Label id="titlePaymentLabel">Payment</Label>
			</View>
		</View>
		<ActivityIndicator id="activityIndicator" message="Loading..."/>
		<View id="paymentDetails" class="payment-types">
			<Label id="paymentViewLabel" class="payment-label">Add/Edit Payment Method</Label>
			<View id="viewAddCard" class="rowContainer">
			 	<Label icon="fa-plus-square-o" id="labelAddCard" class="rowLabel" onClick="addNewCard">Update Payment Method</Label>
			</View>
			
		</View>
		<View id="bankingDetails" class="payment-types">
			<Label id="bankingViewLabel" class="payment-label">Add/Edit a Bank</Label>
			<View id="viewAddBank" class="rowContainer">
			 	<Label icon="fa-plus-square-o" id="labelAddBank" class="rowLabel" onClick="addNewBank">Update Bank Account</Label>
			</View>
		</View>
		<View id="paymentUndefined"></View>
		<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
	</View>
</Alloy>