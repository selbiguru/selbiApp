<Alloy>
    <View id="editUserProfileView">
        <View id="editUserProfileTopBar">
			<View id="menuButton">
				<Label icon="fa-arrow-left" id="editUserProfileButtonIcon"></Label>
			<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
			</View>
			<View id="titleEditUserProfileView">
				<Label id="titleEditUserProfileLabel">Profile</Label>
			</View>
		</View>
		<View id="editUserInfoView" layout="vertical">
			<ImageView id="userProfileImage" image="/images/home-bg.png" />
        	<Label id="editUserImage">Edit Image</Label>
	        <TextField id="firstName" hintText="First Name"></TextField>
	        <TextField id="lastName" hintText="LastName"></TextField>
	        <TextField id="username" hintText="Username"></TextField>
	        <TextField id="streetAddress" hintText="Street Address"></TextField>
	        <TextField id="city" hintText="City"></TextField>
	        <TextField id="state" hintText="State"></TextField>
	        <TextField id="zipCode" maxLength="10" hintText="Zip"></TextField>
	        <Label id="connectFacebook" class="primary-btn">Connect to Facebook</Label>
	        <Label id="connectTwitter" class="primary-btn">Connect to Twitter</Label>
	        <Button onClick="updateUser" id="saveInfo" class="primary-btn">Save</Button>
	   </View>
    </View>
</Alloy>
