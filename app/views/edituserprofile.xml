<Alloy>
	<View id="editUserProfileView">
        <View id="editUserProfileTopBar">
			<View id="menuButton">
				<Label icon="fa-arrow-left" id="editUserProfileButtonIcon"></Label>
			<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
			</View>
			<View id="titleEditUserProfileView">
				<Label id="titleEditUserProfileLabel">Profile</Label>
			</View>
		</View>
		<ScrollView id="editUserInfoView">
			<ImageView id="userProfileImage" image="/images/home-bg.png" />
        	<View id="userInfo" class="rowContainer">
	        	<Label id="firstNameLabel" class="user-profile-labels">First Name</Label>
		        <TextField id="firstName" class="user-profile-text-fields"></TextField>
		    </View> 
		    <View class="rowContainer">   
		        <Label id="lastNameLabel" class="user-profile-labels">Last Name</Label>
		        <TextField id="lastName" class="user-profile-text-fields"></TextField>
		    </View>
		    <View class="rowContainer">
		        <Label id="usernameLabel" class="user-profile-labels">Username</Label>
		        <TextField id="username" class="user-profile-text-fields"></TextField>
		    </View>
		    <View id="userAddress" class="rowContainer">
		        <Label id="streetAddressLabel" class="user-profile-labels">Street Address</Label>
		        <TextField id="streetAddress" class="user-profile-text-fields"></TextField>
		    </View>
		    <View class="rowContainer">    
		        <Label id="cityLabel" class="user-profile-labels">City</Label>
		        <TextField id="city" class="user-profile-text-fields"></TextField>
		    </View>
		    <View class="rowContainer">
		        <Label id="stateLabel" class="user-profile-labels">State</Label>
		        <TextField id="state" class="user-profile-text-fields"></TextField>
		    </View>
		    <View class="rowContainer">    
		        <Label id="zipCodeLabel" class="user-profile-labels">Zip Code</Label>
		        <TextField id="zipCode" maxLength="10" class="user-profile-text-fields"></TextField>
		    </View>
		    <View class="edit-user-profile-buttons-view edit-user-profile-button">
		    	<Label icon="fa-facebook" class="edit-profile-social-icon social-facebook" id="editProfileFacebookConnect"></Label>
		        <Button id="connectFacebook" class="edit-profile-social-text social-facebook">Connect to Facebook</Button>
		    </View>
		    <View class="edit-user-profile-buttons-view edit-user-profile-button">
		        <Label icon="fa-twitter" class="edit-profile-social-icon social-twitter" id="editProfileTwitterConnect"></Label>
		        <Button id="connectTwitter" class="edit-profile-social-text social-twitter">Connect to Twitter</Button>
		    </View>
	        <View id="cancelSaveProfileView" class="edit-user-profile-buttons-view">
		        <Button onClick="updateUser" id="cancelInfo" class="edit-user-profile-button">Cancel</Button>
		        <Button onClick="updateUser" id="saveInfo" class="edit-user-profile-button">Save</Button>
		    </View>
		    <Widget id="fa" src="com.mattmcfarland.fontawesome"/>
	   </ScrollView>
    </View>
</Alloy>
