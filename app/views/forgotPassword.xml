<Alloy>
	<Window backgroundColor="#62D7F5">		
		<View id="forgotPasswordView" class="wrapper-container">
			<Label class="splash-header-text">Reset Password</Label>
			<TextField id="email" hintText="Please enter your email">
				<KeyboardToolbar>
	                <Toolbar id="emailPasswordToolbar">
	                    <Items>
	                    	<Button id="emailPasswordFlexSpace" systemButton="Ti.UI.iPhone.SystemButton.FLEXIBLE_SPACE" />
	                        <Button onClick='blurTextField' id="emailPasswordButton" title='Done' systemButton="Ti.UI.iPhone.SystemButton.DONE" />
	                    </Items>
	                </Toolbar>
	            </KeyboardToolbar>
			</TextField>
			<View class="forgotpassword-underline"/>
			<Button id="resetPassword" class="primary-btn">Reset Password</Button>
			<Label id="cancel" onClick="closeForgotPassword" class="cancel-txt">Cancel</Label>
		</View>
	</Window>
</Alloy>