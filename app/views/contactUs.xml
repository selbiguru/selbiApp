<Alloy>
	<View id="contactUsView">
        <View id="contactUsTopBar">
			<View id="menuButton" class="validateButtons">
				<Label icon="fa-bars" id="contactUsButtonIcon" class="menu-icon-button"></Label>
			</View>
			<View id="titleContactUsView">
				<Label id="titleContactUsLabel">Contact Us</Label>
			</View>
			<View id="sendEmailView" class="validateButtons">
				<Button icon="fa-envelope-o" onClick="sendEmailToSelbi" id="sendEmailButton" class="icon-buttons"></Button>
			</View>
		</View>
		<View id="contactUsInfoView">
			<TextField id="emailTitle" class="font-style">
				<KeyboardToolbar>
	                <Toolbar id="emailTitleToolbar">
	                    <Items>
	                        <Button id="emailTitleButton" title='Done' systemButton="Ti.UI.iPhone.SystemButton.DONE" />
	                    </Items>
	                </Toolbar>
	            </KeyboardToolbar>
			</TextField>
			<View id="messageView">
				<TextArea id="emailBody" class="font-style">
					<KeyboardToolbar>
	                <Toolbar id="emailBodyToolbar">
	                    <Items>
	                        <Button id="emailBodyButton" title='Done' systemButton="Ti.UI.iPhone.SystemButton.DONE" />
	                    </Items>
	                </Toolbar>
	            </KeyboardToolbar>
				</TextArea>
				<Label id="hintTextLabel" class="font-style">Let us know how we can help you today</Label>
			</View>
			<!--<Label id="emailSelbiEmail">Or email us at Selbiguru@gmail.com</Label> -->
		</View>
		<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
    </View>
</Alloy>