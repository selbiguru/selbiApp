<Alloy>
	<View id="viewListingView">
		<View id="viewListingTopBar">
			<View id="menuButton">
				<Label icon="fa-arrow-left" id="viewListingButtonIcon"></Label>
				<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
			</View>
			<View id="titleViewListingView">
				<Label id="titleViewListingLabel">Preview Listing</Label>
			</View>
		</View>
		<ScrollView id="viewListingScrollView">
			<View id="viewListingHeader">
				<!-- profile image -->
				<ImageView id="sellerImage"/>
				<Label id="sellerName">first and last name</Label>
			</View>
			<ScrollableView id="imageGallery">
			</ScrollableView>
				
			<View layout="vertical" class="product-info">
				<Label id="viewListingProductTitle" class="product-title">Product Title</Label>
				<Label id="viewListingProductPrice" class="product-price">0.00</Label>
				<View class="line-separator"></View>				
				<Label id="viewListingProductDescription" class="product-description"></Label>				
			</View>	
		</ScrollView>
		<View id="viewListingButtonView">
			<Button id="editListing" class="reverse-btn half-btn">Edit Listing</Button>
			<Button id="saveListing" class="secondary-btn half-btn" onClick="publishListing">Looks Good</Button>
		</View>
	</View>
</Alloy>