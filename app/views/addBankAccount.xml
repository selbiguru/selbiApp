<Alloy>
	<View id="addBankAccountView">
		<View id="addBankAccountTopBar">
			<View id="backViewButton" onClick="backButton">
				<Button icon="fa-chevron-left" id="addBankAccountButtonIcon"></Button>			
			</View>
			<View id="titleAddBankAccountView">
				<Label id="titleAddBankAccountLabel">Add Bank</Label>
			</View>
			<View id="saveManagedBankView">
				<Button onClick="addBankInfo" id="saveManagedBankButton" class="icon-buttons">Save</Button>
			</View>
		</View>
		<View id="viewBankDescription">
			<Label icon="fa-university" id="iconBankDescription"></Label>
			<Label id="labelBankDescription"> Adding a bank allows Selbi to directly send you all the money you make!  This makes cashing out simple and flawless!</Label>
		</View>
		<ScrollView id="enterBankAccountDetailView">
			<View id='routingNumberView' class='number-views'>
				<Label id='routingLabel' class='account-number-labels'>Routing Number:</Label>
				<TextField id="routingNumber" class="banking-number left-padding" maxLength="9" required="true">
				</TextField>
			</View>
			<View class="banking-underline"/>
			<View id='accountNumberView' class='number-views'>
				<Label id='accountLabel' class='account-number-labels'>Account Number:</Label>
				<TextField id="accountNumber" class="banking-number left-padding" maxLength="17" required="true">
				</TextField>
			</View>
			<View class="banking-underline"/>
			<View id='ssnNumberView' class='number-views'>
				<Label id='ssnLabel' class='account-number-labels'>Last 4 SSN:</Label>
				<TextField id="ssnNumber" class="banking-number left-padding" maxLength="4" required="true">
				</TextField>
			</View>
			<View class="banking-underline"/>
			<Label id='ssnInfo' class='account-number-labels ssn-info'>*We ask for Last 4 SSN # for bank validation.  We do not save this information on our servers!</Label>
		</ScrollView>
		<View id="viewExCheck">
			 <ImageView id="imageExCheck" class="rowLabel"/>
		</View>
		<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
	</View>
</Alloy>