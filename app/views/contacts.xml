<Alloy>
	<View id="addFriendsView">
		<View id="addFriendsTopBar">
			<View id="menuButton" class="validateButtons">
				<Label icon="fa-bars" id="addFriendsButtonIcon" class="icon-buttons"></Label>
			</View>
			<View id="titleAddFriendsView">
				<Label id="titleAddFriendsLabel">Add Friends</Label>
			</View>
		</View>
		<View id="addFriendsSearchView">
			<TextField id='usernameSearch' hintText="Enter a username to add a friend"></TextField>
			<View class="dark-underline"/>
		</View>
		<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
	</View>
</Alloy>