<Alloy>
	<View id="phoneVerifyView">
		<View id="phoneVerifyTopBar">
			<View id="menuButton">
				<Label icon="fa-arrow-left" id="phoneVerifyButtonIcon"></Label>			
			</View>
			<View id="titlePhoneVerifyView">
				<Label id="titlePhoneVerifyLabel">Verify Phone Number</Label>
			</View>
		</View>
		<View id="verifyDescriptionView">
			<Label id="verifyHeader">Enter Code Below!</Label>
			<Label id="verifyBody">We've sent you a text!  Just enter the 4 digit code below and take full advantage of Selbi!'</Label>
		</View>
		<View id="phoneVerifyNumber">
			<TextField id="firstNumber" maxLength='1' class="verify-code"></TextField>
			<TextField id="secondNumber" maxLength='1' class="verify-code"></TextField>
			<TextField id="thirdNumber" maxLength='1' class="verify-code"></TextField>
			<TextField id="fourthNumber" maxLength='1' class="verify-code"></TextField>
		</View>	
		<Button id="verifyCode" onClick='verifyCode'>Verify</Button>
		<Button id="resendCode" onClick='resendCode'>Resend</Button>
		<View id="verifyDisclaimerView">
			<Label id="verifyDisclaimer">*Selbi uses your phone number as an extra security layer for when you cash out your money.</Label>
		</View>
		<View>
			<Label></Label>
		</View>
		<Widget id="fa" src="com.mattmcfarland.fontawesome"/>
	</View>
</Alloy>