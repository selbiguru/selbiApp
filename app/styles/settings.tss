//DEFAULT
"#settingsView":{
	layout: 'vertical',
	backgroundColor: '#FAFAFA'
},

".settingsTable":{
	selectedBackgroundColor: "EAEAEA",
	backgroundColor:'#FAFAFA',
	scrollable: false,
	height: Ti.UI.SIZE,
	right: "15dp"
},

".tableRow":{
	height: '40dp'
},
".rowContainer":{
	height: '40dp',
	layout:'horizontal'
},
".rowLabel":{
	left: "15dp",
	height: "40dp",
	font:{
		fontSize: "16dp",
    	fontFamily: 'Nunito-Light'
	},
	color: "#545555"
},
".row-icon":{
	textAlign: Ti.UI.TEXT_ALIGNMENT_RIGHT,
	right: "5dp",
	width: Titanium.UI.FILL,
	color: "#1BA7CD"
},
".menu-underline": {
	height: "1dp",
	top:"0dp",
	width: Titanium.UI.FILL,
	backgroundColor:"#EAEAEA"
},



//iPhone 4
"#settingsTopBar[if=Alloy.Globals.iPhoneFour]":{
	width: Ti.UI.FILL,
	height: "60dp",
	backgroundColor: '#FAFAFA',
	layout: 'horizontal'
},
"#menuButton[if=Alloy.Globals.iPhoneFour]":{
	height: "60dp",
	width: "60dp",
	backgroundColor: '#FAFAFA'
},
"#settingsButtonIcon[if=Alloy.Globals.iPhoneFour]": {
	font: {
            fontSize: "18dp"
        },
	color: "#1BA7CD"
},
"#titleSettingsView[if=Alloy.Globals.iPhoneFour]": {
	right: "60dp"
},

"#titleSettingsLabel[if=Alloy.Globals.iPhoneFour]": {
	color: "#1BA7CD",
	width: Titanium.UI.SIZE,
	font: {
		fontSize: "18dp",
		fontFamily: "Nunito-Bold"
	}
},





